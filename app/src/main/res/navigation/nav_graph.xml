<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.shpp.eorlov.assignment2.ui.fragment.MainFragment"
        android:label="fragment_content"
        tools:layout="@layout/fragment_content">
        <action
            android:id="@+id/action_mainFragment_to_detailViewFragment"
            app:destination="@id/detailViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailViewFragment"
        android:name="com.shpp.eorlov.assignment2.ui.detailview.DetailViewFragment"
        android:label="DetailViewFragment">

        <argument
            android:name="contactPhotoUri"
            app:argType="string" />
        <argument
            android:name="contactName"
            app:argType="string" />
        <argument android:name="contactCareer"
            app:argType="string" />
        <argument android:name="contactResidence"
            app:argType="string" />
    </fragment>
</navigation>